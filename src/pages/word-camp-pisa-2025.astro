---
import Layout from "../layouts/Layout.astro";

import Cover from "../slides/cover.astro";
import CssVariables from '../slides/css-variables.astro';
import Font from '../slides/font.astro';
import Implementations from '../slides/implementations.astro';
import Intro from '../slides/intro.astro';
import Outro from '../slides/outro.astro';
import ReadingWriting from '../slides/reading-writing.astro';
import Thanks from "../slides/thanks.astro";
import qrLinkRating from "../img/qrcode_rating_wcp2025.png";
import OtherWriting from '../slides/other-writing.astro';
import UserPreferences from '../slides/user-preferences.astro';
import UniversalDesign from '../slides/universal-design.astro';
import refsFav from '../img/logo-wcp.png';
import qrLink from "../img/qrcode_slide_wcp2025.png";
import ImplementationsBis from '../slides/implementations-bis.astro';
import CoverWcp2025 from '../slides/cover-wcp-2025.astro';
const canRender = import.meta.env.DEV || new Date("2025-11-22") < new Date();
const favIcon = refsFav.src;
const metaData = {
  title: 'Designing for Cultural Inclusion',
  description: 'CSS and Accessibility as Key Tools'
}
---

<Layout canRender={canRender} favIcon={favIcon} metaData={metaData}>
  <CoverWcp2025 />
  {canRender && (
    <Cover />
    <Intro />
    <CssVariables />
    <ReadingWriting />
    <Implementations />
    <ImplementationsBis />
    <OtherWriting />
    <Font />
    <UniversalDesign />
    <UserPreferences />
    <Outro />
    <Thanks qrLink={qrLink} qrLinkRating={qrLinkRating} newQR urlLink="https://css-accessibility-cultural-inclusion.marcotalk.dev/word-camp-pisa-2025/" />
  )}
</Layout>
<style lang="scss" is:global>
  :root {
    &:has(p-slide.cover[aria-hidden="false"]) {
      --current-slide-bg: #4400e2;
    }
    --current-slide-bg: #000;
  }
  p-slide {
    &:first-of-type {
      background-color: #4400e2;
    }
    background-color: #000;
  }
</style>