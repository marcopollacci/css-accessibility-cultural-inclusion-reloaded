---
import Layout from "../layouts/Layout.astro";
import CoverGreenSoftwareItalia2025 from '../slides/cover-green-software-italia-2025.astro'

import Cover from "../slides/cover.astro";
import CssVariables from '../slides/css-variables.astro';
import Font from '../slides/font.astro';
import Implementations from '../slides/implementations.astro';
import Intro from '../slides/intro.astro';
import OtherWriting from '../slides/other-writing.astro';
import Outro from '../slides/outro.astro';
import ReadingWriting from '../slides/reading-writing.astro';
import Thanks from "../slides/thanks.astro";
import UserPreferences from '../slides/user-preferences.astro';
import gsi from "../img/gsi.png";
const canRender = import.meta.env.DEV || new Date("2025-06-19") < new Date();
const favIcon = gsi.src
const metaData = {
  title: 'Designing for Cultural Inclusion',
  description: 'CSS and Accessibility as Key Tools'
}
---

<Layout canRender={canRender} favIcon={favIcon} metaData={metaData}>
  <CoverGreenSoftwareItalia2025 />
  {canRender && (
    <Cover />
    <Intro />
    <CssVariables />
    <ReadingWriting />
    <Implementations />
    <OtherWriting />
    <Font />
    <UserPreferences />
    <Outro />
    <Thanks />
  )}
</Layout>
