---
import Layout from "../layouts/Layout.astro";

import Cover from "../slides/cover.astro";
import CssVariables from '../slides/css-variables.astro';
import Font from '../slides/font.astro';
import Implementations from '../slides/implementations.astro';

import Outro from '../slides/outro.astro';
import ReadingWriting from '../slides/reading-writing.astro';
import Thanks from "../slides/thanks.astro";
import dvm from "../img/dfm25.svg";
import qrLink from "../img/qrcode_slide_dfp25.png";
import qrLinkRating from "../img/qrcode_rating_dfp25.png";
import ImplementationsBis from '../slides/implementations-bis.astro';
import meMib from "../img/me-mib-alien.webp";
import UserPreferences from '../slides/user-preferences.astro';
import CoverDevfestPescara2025 from '../slides/cover-devfest-pescara-2025.astro';
import IntroMib from '../slides/intro-mib.astro';

const canRender = import.meta.env.DEV || new Date("2025-11-09") < new Date();
const favIcon = dvm.src
const metaData = {
  title: 'Designing for Cultural Inclusion',
  description: 'CSS and Accessibility as Key Tools'
}
const titleSlide = "Agent M"
---

<Layout canRender={canRender} favIcon={favIcon} metaData={metaData}>
  <CoverDevfestPescara2025 />
  {canRender && (
    <Cover meReloaded={meMib} title={titleSlide} />
    <IntroMib />
    <CssVariables />
    <ReadingWriting />
    <Implementations />
    <ImplementationsBis />
    <Font />
    <UserPreferences />
    <Outro />
    <Thanks meReloaded={meMib} title={titleSlide} qrLink={qrLink} qrLinkRating={qrLinkRating} newQR urlLink="https://css-accessibility-cultural-inclusion.marcotalk.dev/devfest-pescara-2025/" />
  )}
</Layout>
<style lang="scss" is:global>
  .my-face {
    border-radius: 100%;
    border: 0.5rem #fff solid;
  }
</style>