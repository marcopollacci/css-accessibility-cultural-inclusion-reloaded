---
import { Image } from "astro:assets";
import me from "../img/me.png";
import fourtyFactory from "../img/40factory.svg";
---

<p-slide>
  <img
    alt="thatsall"
    src="/img/thatsall.gif"
    style="--image-start-size: 100%"
    class="alter-image-size"
  />
</p-slide>
<p-slide class="center">
  <h2 style="margin-block-end: 0.3em">You can see this slide on</h2>
  <p-note class="to-do" style="margin-block-end: 0.5em">
    <!-- <img src="/img/qrcode.png" alt="qrcode" class="alter-image-size" />  -->
    adding qr image!
  </p-note>
  <p-note class="to-do"><a href="">adding link</a></p-note>
</p-slide>
<p-slide class="two-columns">
  <p-note class="text-cover my-data my-presentation">
    <h5 class="text-cover">Thank you again!</h5>
    <Image
      src={me}
      class="my-face"
      alt="me"
      style="--image-start-size: 6em"
      class="alter-image-size"
    />

    <span>Marco Pollacci</span>
    <span>Senior Frontend Developer</span>
    <div role="generic">
      <span>@</span>
      <Image
        src={fourtyFactory}
        alt="40factory logo"
        class="alter-image-size"
        style="--image-start-size: .6em"
      />
    </div>
  </p-note>
  <p-note class="text-cover my-data my-presentation">
    <h5>Leave some feedback</h5>
    <span class="to-do">adding qr image!</span>
    <!-- <img style="--image-start-size: 10.3em" class="alter-image-size" src="/img/qr_link.svg" alt="qr" /> -->
  </p-note>
</p-slide>
