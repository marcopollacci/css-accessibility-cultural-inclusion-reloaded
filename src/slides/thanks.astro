---
import { Image } from "astro:assets";
import me from "../img/me.png";
import fourtyFactory from "../img/40factory.svg";
import qrLink from "../img/qrcode_slide_gsi.png";
import qrLinkSlide from "../img/qrcode_slide_gsi.png";
---

<p-slide>
  <img
    alt="thatsall"
    src="/img/thatsall.gif"
    style="--image-start-size: 100%"
    class="alter-image-size"
  />
</p-slide>
<p-slide class="center">
  <h2 style="margin-block-end: 0.3em">You can see this slide on</h2>
  <p-note style="margin-block-end: 0.5em">
    <Image src={qrLink} alt="qrcode slide" class="alter-image-size" />
  </p-note>
  <p-note
    ><a
      href="https://css-accessibility-cultural-inclusion-v2.pages.dev/green-software-italia-2025/"
      >https://css-accessibility-cultural-inclusion-v2.pages.dev/green-software-italia-2025/</a
    ></p-note
  >
</p-slide>
<p-slide class="two-columns">
  <p-note class="text-cover my-data my-presentation">
    <h5 class="text-cover">Thank you again!</h5>
    <Image
      src={me}
      class="my-face"
      alt="me"
      style="--image-start-size: 6em"
      class="alter-image-size"
    />

    <span>Marco Pollacci</span>
    <span>Senior Frontend Developer</span>
    <div role="generic">
      <span>@</span>
      <Image
        src={fourtyFactory}
        alt="40factory logo"
        class="alter-image-size"
        style="--image-start-size: .6em"
      />
    </div>
  </p-note>
  <p-note class="text-cover my-data my-presentation">
    <h5>Leave some feedback</h5>
    <Image src={qrLinkSlide} alt="qrcode slide" class="alter-image-size" />
  </p-note>
</p-slide>
